<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="2dp"
    app:cardElevation="3dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Image view for displaying our image-->
        <ImageView
            android:id="@+id/PatientidIVimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="3dp" />

        <!--Text view for displaying our text -->
            <TextView
                android:id="@+id/PatientNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/PatientidIVimage"
                android:padding="3dp"
                android:text="Nom"
                android:textAlignment="center"
                android:textColor="@color/black" />

        <TextView
            android:id="@+id/PatientsAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/PatientidIVimage"
            android:padding="3dp"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="@color/black" />

            <Button
                android:id="@+id/Accepter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@id/PatientidIVimage"
                android:backgroundTint="@color/Vert"

                android:padding="3dp"
                android:text="ACCEPTER"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/Refuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="163dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@id/PatientidIVimage"
                android:padding="3dp"
                android:text="Refuser"
                android:backgroundTint="@color/red"
                android:textAlignment="center"
                android:textColor="@color/black" />


        </RelativeLayout>

</androidx.cardview.widget.CardView>